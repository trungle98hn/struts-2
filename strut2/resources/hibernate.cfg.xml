<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>		
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=struts2</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">123</property>
		<property name="connection.pool_size">1</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="show_sql">true</property>
		<mapping class="entity.Category"/>	
		<mapping class="entity.Language"/>		
		<mapping class="entity.Pubhouse"/>
		<mapping class="entity.Users"/>	
		<mapping class="entity.sach"/>		
	</session-factory>
</hibernate-configuration>
